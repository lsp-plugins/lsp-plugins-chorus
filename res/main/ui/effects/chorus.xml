<plugin resizable="true">
	<hbox>
		<group ui:inject="GraphGroup" ipadding="0" expand="true" fill="true" text="labels.graphs.LFO">
			<grid rows="4" cols="4" spacing="4">
				<!-- Row 1 -->
				<cell cols="2">
					<label text="LFO1" />
				</cell>
				<cell cols="2">
					<button id="lfo2" ui:inject="Button_cyan" text="LFO2" />
				</cell>
			
				<!-- Row 2 -->
				<!-- LFO 1 graph -->
				<cell cols="2">
					<graph width.min="200" expand="true" height.min="200" >
						<origin hpos="-1" vpos="1" visibility="false" />
						<origin hpos="-1" vpos="-1" visibility="false" />
		
						<!-- Grid -->
						<ui:with color="graph_alt_2">
							<marker v="45" />
							<marker v="135" />
							<marker v="225" />
							<marker v="315" />
							<marker v="0.125" ox="1" oy="0" />
							<marker v="0.375" ox="1" oy="0" />
							<marker v="0.625" ox="1" oy="0" />
							<marker v="0.875" ox="1" oy="0" />
						</ui:with>
		
						<ui:with color="graph_alt_1">
							<marker v="90" />
							<marker v="270" />
							<marker v="0.25" ox="1" oy="0" />
							<marker v="0.75" ox="1" oy="0" />
						</ui:with>
		
						<ui:with color="graph_sec">
							<marker v="180" />
							<marker v="0.5" ox="1" oy="0" />
						</ui:with>
		
						<!-- Axes -->
						<axis min="0" max="360" angle="1.5" visibility="false"/>
						<axis min="0" max="1" angle="0" visibility="false"/>
						<axis o="1" min="0" max="100" angle="0.5" visibility="false"/>
		
						<!-- Mesh -->
						<ui:for id="i" first="1" count="16"> 
							<mesh id="lgr_1"
								x.index="0"
								y.index="${i}"
								width="3"
								color="graph_mesh"
								smooth="true" />
						</ui:for>
		
						<!-- Markers -->
						<marker
							o="1" ox="2" oy="1"
							zero="0"
							id="xfade"
							editable="true"
							pointer="vsize"
							color="graph_marker_cycle"
							hcolor="graph_marker_cycle"
							color.a="0.5"
							hcolor.a="0.5" />
		
						<ui:for id="i" first="1" count="16">
							<ui:if test="!(ex :in_r)">
								<marker v=":vmp${i}" ox="1" oy="0" color="graph_mesh" color.a="0.65"
									visibility="(!:lfo2) or (${:i mod 2 == 1})" />
							</ui:if>
							<ui:if test="ex :in_r">
								<marker v=":vmp${i}_l" ox="1" oy="0" color="(:ms) ? 'mid' : 'left'" color.a="0.65"
									visibility="(!:lfo2) or (${:i mod 2 == 1})" />
								<marker v=":vmp${i}_r" ox="1" oy="0" color="(:ms) ? 'side' : 'right'" color.a="0.65"
									visibility="(!:lfo2) or (${:i mod 2 == 1})" />
							</ui:if>
						</ui:for>
						
						<!-- Dots -->
						<ui:for id="i" first="1" count="16">
							<ui:if test="!(ex :in_r)">
								<dot x.id="vms_${i}" y.id="vmp_${i}" color="graph_mesh" bcolor="graph_mesh"
									visibility="(!:lfo2) or (${:i mod 2 == 1})" />
							</ui:if>
							<ui:if test="ex :in_r">
								<marker v=":vmp${i}_l" ox="1" oy="0" color="(:ms) ? 'mid' : 'left'" color.a="0.65"
									visibility="(!:lfo2) or (${:i mod 2 == 1})" />
								<marker v=":vmp${i}_r" ox="1" oy="0" color="(:ms) ? 'side' : 'right'" color.a="0.65"
									visibility="(!:lfo2) or (${:i mod 2 == 1})" />
							</ui:if>
						</ui:for>
		
						<!-- text -->
						<text x="0" y="0" halign="1" valign="-1" text="graph.values.min" />
						<text x="0" y="1" halign="-1" valign="-1" text="graph.values.max" />
						<text x="0" y="0.5" halign="0" valign="-1" text="graph.axis.depth" />
						<ui:for id="i" first="1" count="7">
							<text x="${:i*45}" y="0" halign="1" valign="1" text="graph.values.x:deg" text:value="${:i*45}" />
						</ui:for>
						<text x="360" y="0" halign="1" valign="1" text="graph.axis.phase" />
		
						<text x="360.0 - 3.6*:xfade" y="1" halign="-1" valign="1" text="labels.lfo.crossfade" color="graph_marker_cycle" color.a="0.5"/>
					</graph>
				</cell>
				
				<!-- LFO 2 graph -->
				<cell cols="2">
					<graph width.min="200" expand="true" height.min="200" >
						<origin hpos="-1" vpos="1" visibility="false" />
						<origin hpos="-1" vpos="-1" visibility="false" />
		
						<!-- Grid -->
						<ui:with color="graph_alt_2">
							<marker v="45" />
							<marker v="135" />
							<marker v="225" />
							<marker v="315" />
							<marker v="0.125" ox="1" oy="0" />
							<marker v="0.375" ox="1" oy="0" />
							<marker v="0.625" ox="1" oy="0" />
							<marker v="0.875" ox="1" oy="0" />
						</ui:with>
		
						<ui:with color="graph_alt_1">
							<marker v="90" />
							<marker v="270" />
							<marker v="0.25" ox="1" oy="0" />
							<marker v="0.75" ox="1" oy="0" />
						</ui:with>
		
						<ui:with color="graph_sec">
							<marker v="180" />
							<marker v="0.5" ox="1" oy="0" />
						</ui:with>
		
						<!-- Axes -->
						<axis min="0" max="360" angle="1.5" visibility="false"/>
						<axis min="0" max="1" angle="0" visibility="false"/>
						<axis min="0" max="100" angle="0.5" visibility="false"/>
		
						<!-- Mesh -->
						<ui:for id="i" first="1" count="8"> 
							<mesh id="lgr_2"
								x.index="0"
								y.index="${i}"
								width="3"
								color="graph_mesh"
								visibility="(:lfo2) and (:voices ige 2)"
								smooth="true" />
						</ui:for>
		
						<!-- Markers -->
						<marker
							o="1" ox="2" oy="1"
							zero="0"
							id="xfade"
							editable="true"
							pointer="vsize"
							color="graph_marker_cycle"
							hcolor="graph_marker_cycle"
							color.a="0.5"
							hcolor.a="0.5" />
		
						<ui:for id="i" first="2" count="8" step="2">
							<ui:if test="!(ex :in_r)">
								<marker v=":vmp${i}" ox="1" oy="0" color="graph_mesh" color.a="0.65"
									visibility=":lfo2" />
							</ui:if>
							<ui:if test="ex :in_r">
								<marker v=":vmp${i}_l" ox="1" oy="0" color="(:ms) ? 'mid' : 'left'" color.a="0.65"
									visibility=":lfo2" />
								<marker v=":vmp${i}_r" ox="1" oy="0" color="(:ms) ? 'side' : 'right'" color.a="0.65"
									visibility=":lfo2" />
							</ui:if>
						</ui:for>
						
						<!-- Dots -->
						<ui:for id="i" first="2" count="8" step="2">
							<ui:if test="!(ex :in_r)">
								<dot x.id="vms_${i}" y.id="vmp_${i}" color="graph_mesh" bcolor="graph_mesh"
									visibility=":lfo2" />
							</ui:if>
							<ui:if test="ex :in_r">
								<marker v=":vmp${i}_l" ox="1" oy="0" color="(:ms) ? 'mid' : 'left'" color.a="0.65"
									visibility=":lfo2" />
								<marker v=":vmp${i}_r" ox="1" oy="0" color="(:ms) ? 'side' : 'right'" color.a="0.65"
									visibility=":lfo2" />
							</ui:if>
						</ui:for>
		
						<!-- text -->
						<text x="0" y="0" halign="1" valign="-1" text="graph.values.min" />
						<text x="0" y="1" halign="-1" valign="-1" text="graph.values.max" />
						<text x="0" y="0.5" halign="0" valign="-1" text="graph.axis.depth" />
						<ui:for id="i" first="1" count="7">
							<text x="${:i*45}" y="0" halign="1" valign="1" text="graph.values.x:deg" text:value="${:i*45}" />
						</ui:for>
						<text x="360" y="0" halign="1" valign="1" text="graph.axis.phase" />
		
						<text x="360.0 - 3.6*:xfade" y="1" halign="-1" valign="1" text="labels.lfo.crossfade" color="graph_marker_cycle" color.a="0.5"/>
					</graph>
				</cell>
				
				<!-- Rows 3, 4 -->
				<label text="Overlap" />
				<cell rows="2">
					<knob id="lo_1" />
				</cell>
				<label text="Overlap" />
				<cell rows="2">
					<knob id="lo_2" />
				</cell>
				<value id="lo_1" sline="true" />
				<value id="lo_2" sline="true" />
			</grid>
		</group>
		<vbox>
			<grid rows="3" cols="1">
				<label text="Voices" />
				<knob id="voices" />
				<value id="voices" />
			</grid>
		</vbox>
	</hbox>
</plugin>
